<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5E1"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="Our Menu"
        android:textAlignment="center"
        android:textColor="#8B4513"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/cart_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Cart Icon -->
    <ImageView
        android:id="@+id/cart_icon"
        android:layout_width="66dp"
        android:layout_height="63dp"
        android:src="@drawable/ic_cart"
        android:contentDescription="Cart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Category Selection Screen -->
    <LinearLayout
        android:id="@+id/category_selection_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/menu_title"
        app:layout_constraintBottom_toTopOf="@id/track_orders_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/category_selection_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="16dp"
            android:text="Category"
            android:textAlignment="textStart"
            android:textColor="#8B4513"
            android:textSize="24sp"
            android:textStyle="bold" />

        <GridLayout
            android:id="@+id/category_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:rowCount="2">

            <!-- Coffee Category Card -->
            <LinearLayout
                android:id="@+id/category_coffee_button"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/card_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="Coffee"
                    android:src="@drawable/coffee_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coffee"
                    android:textColor="#8B4513"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Tea Category Card -->
            <LinearLayout
                android:id="@+id/category_tea_button"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/card_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="Tea"
                    android:src="@drawable/tea_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tea"
                    android:textColor="#8B4513"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Pastries Category Card -->
            <LinearLayout
                android:id="@+id/category_pastries_button"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/card_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="Pastries"
                    android:src="@drawable/pastries_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pastries"
                    android:textColor="#8B4513"
                    android:textSize="18sp" />
            </LinearLayout>
        </GridLayout>
    </LinearLayout>

    <!-- Menu Browsing Screen -->
    <LinearLayout
        android:id="@+id/menu_browsing_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/track_orders_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu_title"
        tools:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/back_to_categories_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#8B4513"
                android:text="Back"
                android:textAlignment="center"
                android:textColor="#FFF5E1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/category_label"
                android:layout_width="239dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="cursive"
                android:text="Category: Coffee"
                android:textAlignment="center"
                android:textColor="#8B4513"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>


        <!-- Dietary Filter -->
        <RadioGroup
            android:id="@+id/dietary_filter_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/dietary_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#8B4513"
                android:checked="true"
                android:text="All Dietary"
                android:textColor="#8B4513" />

            <RadioButton
                android:id="@+id/dietary_gluten_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#8B4513"
                android:text="Gluten-Free"
                android:textColor="#8B4513" />

            <RadioButton
                android:id="@+id/dietary_vegetarian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#8B4513"
                android:text="Vegetarian"
                android:textColor="#8B4513" />
        </RadioGroup>

        <!-- RecyclerView for Menu Items -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/menu_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1" />

        <!-- Empty Menu Message -->
        <TextView
            android:id="@+id/empty_menu_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="No items match the selected filters"
            android:textColor="#8B4513"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Track Orders Button -->
    <Button
        android:id="@+id/track_orders_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Track Orders"
        android:backgroundTint="#A8D5BA"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>